<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_farewell"
    tools:context=".EmotionActivity2">

    <TextView
        android:id="@+id/text_emotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="25dp"
        android:textColor="@color/colorText"
        android:fontFamily="@font/bmjua"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_music_solace"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_custom"
        android:gravity="center"
        android:fontFamily="@font/bmjua"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:text="위로가 필요해"
        app:layout_constraintBottom_toTopOf="@+id/space2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space" />

    <Button
            android:id="@+id/btn_music_cry"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
        android:background="@drawable/button_custom"
        android:textSize="20dp"
        android:textColor="#ffffff"
            android:gravity="center"
            android:fontFamily="@font/bmjua"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/space4"
            app:layout_constraintTop_toBottomOf="@+id/btn_music_solace"
            android:text="펑펑 울고싶어" />

    <Space
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_music_solace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_emotion" />

    <Space
        android:id="@+id/space2"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        app:layout_constraintBottom_toTopOf="@id/btn_music_cry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_music_solace" />

    <Space
        android:id="@+id/space4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="322dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_music_cry"/>
</androidx.constraintlayout.widget.ConstraintLayout>